/* test/test.wxss */
@import "/lib/weui.wxss";

.cate{
  display: flex;
  width: 100%;
  box-sizing: border-box;
}
.left{
  position: fixed;
  top: 0;
  color: gray;
  font-size: 14px;

  width: 20%;
  background-color: aliceblue;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}
.left-title{
  width: 100%;
  height: 16px;
  line-height: 16px;
  padding: 5px;
  border-bottom: 2px solid white;
  text-align: center;
  margin-top:5px; 
}
.selected{
  width: 100%;
  height: 16px;
  line-height: 16px;
  background-color: white;
  color: gray;
  margin-top:5px; 
}
.right{
 width: 80%;
 display: flex;
 flex-direction: row;
 flex-wrap: wrap;
 font-size: 12px;
 justify-content: space-around;
 margin-left: 20%;
}

.goods-item{
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  margin: 5px;
  border: 1px solid aliceblue;
  box-shadow: 1px 1px 1px #eee;
}
.goods-img{
  width: 120px;
}
.goods-title{
  color: gray;
}
.goods-price{
  color: red
}
