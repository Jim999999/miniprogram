<!--pages/me/index.wxml-->
<view class="content">
  <form class="form" bindsubmit="register" bindreset="reset">
    <view class="form-group">
      <view class="label">手机号码</view>
      <input class="form-input" name="name" value="" type="number"></input>
    </view>
    <view class="form-group">
        <view class="label">设置密码</view>
        <input class="form-input" name="passwd" value=""  type="password"></input>
    </view>
    <view class="form-group">
        <view class="label">确认密码</view>
        <input class="form-input" name="cp_passwd" value="" type="password"></input>
    </view>
    <button class="register button" type="warn" form-type="submit">注册</button>
  </form>
</view>
